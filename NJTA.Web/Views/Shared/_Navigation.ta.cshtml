<!-- Navigation -->
@{
    var ControllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    var ActionName = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
    var PageName = string.Format("{0}.{1}", ControllerName, ActionName);
}

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#jts-navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">திருவள்ளுவர் தமிழ்ப்பள்ளி</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="jts-navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="~/en/@ControllerName/@ActionName">En</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="@(string.Compare(PageName,"Home.Resources") == 0 ? "active" : "")">@Html.ActionLink("வளங்கள்", "Resources", "Home")</li>
                <li class="@(string.Compare(PageName,"Home.Team") == 0 ? "active" : "")">@Html.ActionLink("குழு", "Team", "Home")</li>
                <li class="dropdown @(string.Compare(ControllerName,"School") == 0 ? "active" : "")">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">பள்ளிகள்<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li class="@(string.Compare(PageName,"School.Edison") == 0 ? "active" : "")">@Html.ActionLink("எடிசன்", "Edison", "School")</li>
                        <li class="@(string.Compare(PageName,"School.Parsippany") == 0 ? "active" : "")">@Html.ActionLink("பார்சிபனி", "Parsippany", "School")</li>
                    </ul>
                </li>
                <li class="@(string.Compare(PageName,"Home.About") == 0 ? "active" : "")">@Html.ActionLink("எம்மைப் பற்றி", "About", "Home")</li>
                <li class="@(string.Compare(PageName,"Home.Contact") == 0 ? "active" : "")">@Html.ActionLink("தொடர்புகளுக்கு", "Contact", "Home")</li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>
